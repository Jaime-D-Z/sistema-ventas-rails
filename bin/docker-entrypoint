#!/bin/bash -e

# Generar master.key si RAILS_MASTER_KEY estÃ¡ definida pero el archivo no existe
if [ -n "$RAILS_MASTER_KEY" ] && [ ! -f config/master.key ]; then
  echo "Creando config/master.key desde RAILS_MASTER_KEY..."
  echo "$RAILS_MASTER_KEY" > config/master.key
  chmod 600 config/master.key
fi

  ./bin/rails db:prepare
fi

exec "${@}"
