<div class="container mt-5">
  <div class="text-center">
    <h1 class="display-4">Sistema de Ventas</h1>
    <p class="lead">Gestiona tus productos y ventas de manera fácil</p>
    
    <% if user_signed_in? %>
      <div class="mt-4">
        <p>Bienvenido, <%= current_user.email %></p>
        <%= link_to "Ver Productos", productos_path, class: "btn btn-primary btn-lg me-2" %>
        <%= link_to "Nueva Venta", new_venta_path, class: "btn btn-success btn-lg" %>
      </div>
    <% else %>
      <div class="mt-4">
        <%= link_to "Iniciar Sesión", new_user_session_path, class: "btn btn-primary btn-lg me-2" %>
        <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-outline-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>