<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Mis Ventas</h1>
    <%= link_to "Nueva Venta", new_venta_path, class: "btn btn-success" %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <% if @ventas.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Fecha</th>
          <th>Total</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @ventas.each do |venta| %>
          <tr>
            <td>#<%= venta.id %></td>
            <td><%= venta.fecha.strftime("%d/%m/%Y %H:%M") %></td>
            <td>$<%= number_with_precision(venta.total, precision: 2) %></td>
            <td>
              <%= link_to "Ver Detalle", venta_path(venta), class: "btn btn-sm btn-info" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">
      No hay ventas registradas. <%= link_to "Crear primera venta", new_venta_path %>
    </div>
  <% end %>
</div>