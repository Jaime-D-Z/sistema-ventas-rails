<%= form_with(model: producto, class: "needs-validation") do |form| %>
  <% if producto.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(producto.errors.count, "error") %> impidieron guardar:</h4>
      <ul>
        <% producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nombre, class: "form-label" %>
    <%= form.text_field :nombre, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :precio, class: "form-label" %>
    <%= form.number_field :precio, step: 0.01, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :stock, class: "form-label" %>
    <%= form.number_field :stock, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :descripcion, class: "form-label" %>
    <%= form.text_area :descripcion, rows: 3, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", productos_path, class: "btn btn-secondary" %>
  </div>
<% end %>